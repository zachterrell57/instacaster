<!-- Shamelessly stolen from TailwindUI free modal example -->
<div
  class="relative"
  aria-labelledby="cast-modal"
  role="dialog"
  aria-modal="true"
>
  <!--
      Background backdrop, show/hide based on modal state.
  
      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
  <div
    class="background-blur fixed inset-0 bg-gray-500 bg-opacity-60 transition-opacity"
  ></div>

  <div class="modal-page fixed inset-0 z-10 overflow-y-auto">
    <div
      class="modal-container flex h-screen min-h-full justify-center bg-black text-center sm:items-center sm:p-0"
    >
      <!--
          Modal panel, show/hide based on modal state.
  
          Entering: "ease-out duration-300"
            From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            To: "opacity-100 translate-y-0 sm:scale-100"
          Leaving: "ease-in duration-200"
            From: "opacity-100 translate-y-0 sm:scale-100"
            To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        -->

      <!-- This is where all the action actually is -->
      <div
        class="modal relative my-20 flex w-full transform flex-row overflow-hidden rounded-lg bg-white shadow-xl transition-all sm:max-w-7xl"
      >
        <div class="photo max-h w-1/2 bg-teal-50"></div>
        <div class="photo-info bg-gray-500"></div>
      </div>
    </div>
  </div>
</div>
